{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/",
    "lib": ["esnext"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  /* Linting */
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,

  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
